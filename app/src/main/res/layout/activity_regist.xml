<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:hint="Email" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/pwInput"
        android:inputType="textPassword"
        android:hint="패스워드"
        android:layout_below="@+id/emailInput"/>


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/pwConfirmInput"
        android:inputType="textPassword"
        android:hint="패스워드 확인"
        android:layout_below="@+id/pwInput"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/nicknameInput"
        android:hint="닉네임"
        android:layout_below="@+id/pwConfirmInput"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/phoneInput"
        android:hint="핸드폰 번호"
        android:layout_below="@+id/nicknameInput"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/birthInput"
        android:hint="생년월일"
        android:maxLength="8"
        android:layout_below="@+id/phoneInput"/>

    <Button
        android:id="@+id/registFinBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/birthInput"
        android:text="Regist" />

</RelativeLayout>